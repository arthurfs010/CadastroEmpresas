<%- include layouts/sidebar.ejs %>
  <div class="right_col" role="main">
    <div class="">
      <div class="page-title">
        <div class="title_left">
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="x_panel">
            <div class="x_title">
              <h2> Cupom de desconto </h2>
              <div class="clearfix"></div>
            </div>

            <% if(sucesso.length> 0){%>
            <div class="alert alert-success">
              <strong><%= sucesso %></strong>
            </div>
            <% } %>

            <div class="x_content">

              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Cupons Ativos</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table id="datatable-buttons" class="table table-striped table-bordered bulk_action dataTables_wrapper">
                      <thead>
                        <tr>
                          <th>Código</th>
                          <th>Descrição</th>
                          <th>Validade</th>
                          <th></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% if(cupons.length) { %>
                          <% for(var i = 0; i < cupons.length; i++) { %>
                            <tr>
                              <td><%=cupons[i].codigo%></td>
                              <td><%=cupons[i].descricao%></td>

                              <% var data = cupons[i].validade, %>
                              <% dia  = data.getDate().toString(), %>
                              <% diaF = (dia.length == 1) ? '0'+dia : dia, %>
                              <% mes  = (data.getMonth()+1).toString(), %>
                              <% mesF = (mes.length == 1) ? '0'+mes : mes, %>
                              <% anoF = data.getFullYear(); %>
                              <% validade = diaF+"/"+mesF+"/"+anoF;%>

                              <td><%=validade%></td>

                              <td><%=cupons[i].validade%></td>
                              <td><input type='button' value='Editar' onclick="funcaoCupons('<%= cupons[i].codigo %>', '<%= cupons[i].descricao %>', '<%= cupons[i].validade %>')"></td>
                            </tr>
                        <% }} %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <br />


              <form method="post" action="" name="formulario" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="l_codigo"> Código do Cupom
                  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="text" id="codigo" name="codigo" required="required" class="form-control">
                  </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="l_descricao"> Descrição do Cupom
                  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input type="text" id="descricao" maxlength="200" name="descricao" required="required" class="form-control">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="l_validade"> Validade do cupom
                  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input type="date" id="validade" name="validade" required="required" class="form-control">
                </div>
              </div>




                <div class="ln_solid"></div>
                <div class="form-group">
                  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button class="btn btn-round btn-warning" type="reset">Limpar</button>
                    <button class="btn btn-round btn-success" type="submit">Salvar</button>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
