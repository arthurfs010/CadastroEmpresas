                <div id="map"></div>
                <script>
                function initMap() {
                  var cascavel = {lat: -24.953483, lng: -53.464458};
                  var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 15,
                    center: cascavel
                  });

                  var marker = new google.maps.Marker({
                    position: cascavel,
                    map: map
                  });

                  function selecionaLocal(latLng, map) {
                  	 marker = new google.maps.Marker({
    									position: latLng,
    									map: map
  									});
  									map.panTo(latLng);
									}

                  map.addListener('click', function(a) {
                  	marker.setMap(null);
    								selecionaLocal(a.latLng, map);
  								});

                  
                }
                </script>
                <script async defer
                  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDBDSF5tHZTMvVZAifZK5dwS1mMX5gm_oU&callback=initMap">
                </script>



